char data=0;
#include <Servo.h>
Servo myservo1;
Servo myservo2;
Servo myservo3;
Servo myservo4;
Servo myservo5;
Servo myservo6;

void setup() {
 Serial.begin(9600);
  pinMode(5,OUTPUT);
  pinMode(6,OUTPUT);
  pinMode(10,OUTPUT);
  pinMode(11,OUTPUT);
  myservo1.attach(2);
  myservo2.attach(3);
  myservo3.attach(4);
  myservo4.attach(7);
  myservo5.attach(8);
  myservo6.attach(9);
}

void loop() {
 if(Serial.available()>0)
 {
  data=Serial.read();
  Serial.print(data);
  if(data == 'F') 
      {  
              
        digitalWrite(5, HIGH);
        digitalWrite(6, LOW);
        digitalWrite(10, LOW);
        digitalWrite(11, HIGH);
      }   
       if(data == 'B') 
      {        
         digitalWrite(5, LOW);
        digitalWrite(6, HIGH);
        digitalWrite(10, HIGH);
        digitalWrite(11, LOW);   
         
  }
  if(data == 'L') 
      {        
         digitalWrite(5, LOW);
         digitalWrite(6, HIGH);
         digitalWrite(10, LOW);
         digitalWrite(11, HIGH);    
         
  }
  if(data == 'R') 
      {        
         digitalWrite(5, HIGH);
         digitalWrite(6, LOW);
         digitalWrite(10, HIGH);
         digitalWrite(11, LOW);
         
  }
  if(data== ' ')
      {        
         digitalWrite(5, LOW);
         digitalWrite(6, LOW);
         digitalWrite(10, LOW);
         digitalWrite(11, LOW);
          }
    if( data>=1000 && data<2000)
  {
   int servo1=map(data,1000, 2000, 0,180);
    myservo1.write(servo1);
  }

  if( data>=3000 && data<4000)
  {
   int servo2=map(data,3000, 4000, 0,180);
    myservo2.write(servo2);
  }
  if( data>=5000 && data<6000)
  {
   int servo3=map(data,5000, 6000, 0,180);
    myservo3.write(servo3);
  }
  if( data>=7000 && data<8000)
  {
   int servo4=map(data,7000, 8000, 0,180);
    myservo4.write(servo4);
  }
  if( data>=9000 && data<10000)
  {
   int servo5=map(data,9000, 10000, 0,180);
   myservo5.write(servo5);
  }
  if( data>=11000 && data<12000)
  {
   int servo6=map(data,11000, 12000, 0,180);
    myservo6.write(servo6);
  }
 }
}
